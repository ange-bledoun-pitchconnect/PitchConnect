# ============================================================================
# NEXTAUTH & AUTHENTICATION
# ============================================================================
# Generate a secret: `openssl rand -base64 32` or `node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"`
NEXTAUTH_SECRET=your_generated_secret_here_min_32_chars

# Your application URL (must match Google OAuth redirect URI)
NEXTAUTH_URL=http://localhost:3000

# Google OAuth Configuration
# Get these from: https://console.developers.google.com/
# 1. Create project
# 2. Enable Google+ API
# 3. Create OAuth 2.0 credentials (Web application)
# 4. Add authorized redirect URIs:
#    - http://localhost:3000/api/auth/callback/google
#    - https://yourdomain.com/api/auth/callback/google (production)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL Connection String
DATABASE_URL=postgresql://user:password@localhost:5432/pitchconnect?schema=public

# ============================================================================
# OPTIONAL: Third-party Services
# ============================================================================
# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_AUTH_TOKEN=your_sentry_token_here

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Mux (Video Streaming)
MUX_TOKEN_ID=your_mux_token_id
MUX_TOKEN_SECRET=your_mux_token_secret

# Upstash Redis (Caching)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# Twilio (SMS/Communication)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Resend (Email)
RESEND_API_KEY=your_resend_api_key

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# ============================================================================
# DEVELOPMENT
# ============================================================================
NODE_ENV=development
