{
  "compilerOptions": {
    // ========================================================================
    // üéØ LANGUAGE & ENVIRONMENT - ES2023 MODERN SYNTAX
    // ========================================================================
    "target": "ES2023",
    "lib": ["ES2023", "DOM", "DOM.Iterable", "DOM.AsyncIterable"],
    "jsx": "preserve",
    "jsxImportSource": "react",
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // ========================================================================
    // üì¶ MODULE SYSTEM - ESM WITH BUNDLER RESOLUTION
    // ========================================================================
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,
    "allowImportingTsExtensions": true,
    "noResolve": false,

    // ========================================================================
    // üîí STRICT TYPE CHECKING - ENTERPRISE GRADE
    // ========================================================================
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedSideEffectImports": true,
    "exactOptionalPropertyTypes": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "useUnknownInCatchVariables": true,

    // ========================================================================
    // üîÑ EMIT & OUTPUT - SOURCE MAPS & INCREMENTAL BUILDS
    // ========================================================================
    "declaration": false,
    "declarationMap": false,
    "declarationDir": "./types",
    "sourceMap": true,
    "sourceRoot": ".",
    "mapRoot": "./",
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "./.next/.tsbuildinfo",
    "newLine": "lf",
    "pretty": true,

    // ========================================================================
    // üîó INTEROP & COMPATIBILITY - NEXT.JS & EXTERNAL MODULES
    // ========================================================================
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,

    // ========================================================================
    // ‚ö° PERFORMANCE OPTIMIZATIONS
    // ========================================================================
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    // ========================================================================
    // üé® PATH ALIASES - CLEAN IMPORTS ALIGNED WITH SCHEMA STRUCTURE
    // ========================================================================
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/app/*": ["./src/app/*"],
      "@/src/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/components/ui/*": ["./src/components/ui/*"],
      "@/components/layout/*": ["./src/components/layout/*"],
      "@/components/features/*": ["./src/components/features/*"],
      "@/components/providers/*": ["./src/components/providers/*"],
      "@/features/*": ["./src/features/*"],
      "@/features/auth/*": ["./src/features/auth/*"],
      "@/features/organisations/*": ["./src/features/organisations/*"],
      "@/features/teams/*": ["./src/features/teams/*"],
      "@/features/players/*": ["./src/features/players/*"],
      "@/features/matches/*": ["./src/features/matches/*"],
      "@/features/coaches/*": ["./src/features/coaches/*"],
      "@/features/health/*": ["./src/features/health/*"],
      "@/features/analytics/*": ["./src/features/analytics/*"],
      "@/features/billing/*": ["./src/features/billing/*"],
      "@/features/audit/*": ["./src/features/audit/*"],
      "@/features/webhooks/*": ["./src/features/webhooks/*"],
      "@/api/*": ["./src/app/api/*"],
      "@/services/*": ["./src/services/*"],
      "@/services/auth/*": ["./src/services/auth/*"],
      "@/services/organisations/*": ["./src/services/organisations/*"],
      "@/services/teams/*": ["./src/services/teams/*"],
      "@/services/players/*": ["./src/services/players/*"],
      "@/services/matches/*": ["./src/services/matches/*"],
      "@/services/billing/*": ["./src/services/billing/*"],
      "@/services/audit/*": ["./src/services/audit/*"],
      "@/services/webhooks/*": ["./src/services/webhooks/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/hooks/auth/*": ["./src/hooks/auth/*"],
      "@/hooks/teams/*": ["./src/hooks/teams/*"],
      "@/hooks/players/*": ["./src/hooks/players/*"],
      "@/hooks/matches/*": ["./src/hooks/matches/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/lib/api/*": ["./src/lib/api/*"],
      "@/lib/auth/*": ["./src/lib/auth/*"],
      "@/lib/validation/*": ["./src/lib/validation/*"],
      "@/lib/utils/*": ["./src/lib/utils/*"],
      "@/lib/constants/*": ["./src/lib/constants/*"],
      "@/lib/database/*": ["./src/lib/database/*"],
      "@/lib/formatters/*": ["./src/lib/formatters/*"],
      "@/lib/cache/*": ["./src/lib/cache/*"],
      "@/lib/email/*": ["./src/lib/email/*"],
      "@/lib/storage/*": ["./src/lib/storage/*"],
      "@/lib/logger/*": ["./src/lib/logger/*"],
      "@/types/*": ["./src/types/*"],
      "@/types/api/*": ["./src/types/api/*"],
      "@/types/auth/*": ["./src/types/auth/*"],
      "@/types/models/*": ["./src/types/models/*"],
      "@/types/organisations/*": ["./src/types/organisations/*"],
      "@/types/teams/*": ["./src/types/teams/*"],
      "@/types/players/*": ["./src/types/players/*"],
      "@/types/matches/*": ["./src/types/matches/*"],
      "@/types/billing/*": ["./src/types/billing/*"],
      "@/config/*": ["./src/config/*"],
      "@/constants/*": ["./src/lib/constants/*"],
      "@/context/*": ["./src/context/*"],
      "@/store/*": ["./src/store/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/actions/*": ["./src/actions/*"],
      "@/prisma/*": ["./prisma/*"],
      "@/prisma/schema/*": ["./prisma/schema/*"],
      "@/middleware/*": ["./src/middleware/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/utils/helpers/*": ["./src/utils/helpers/*"],
      "@/utils/validators/*": ["./src/utils/validators/*"],
      "@/utils/formatters/*": ["./src/utils/formatters/*"],
      "@/__tests__/*": ["./__tests__/*"],
      "@/test/*": ["./test/*"]
    },

    // ========================================================================
    // üìö EXTENDED TYPE LIBRARY DEFINITIONS
    // ========================================================================
    "typeRoots": ["./node_modules/@types", "./types"],

    // ========================================================================
    // üîå PLUGINS - NEXT.JS & PRISMA SUPPORT
    // ========================================================================
    "plugins": [
      {
        "name": "next"
      }
    ],

    // ========================================================================
    // üõ†Ô∏è ADDITIONAL COMPILER OPTIONS
    // ========================================================================
    "allowJs": true,
    "checkJs": false,
    "suppressExcessPropertyErrors": false,
    "suppressImplicitAnyIndexErrors": false
  },

  // ============================================================================
  // üìù FILES & INCLUDES
  // ============================================================================
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "prisma/**/*",
    "prisma/**/*.ts",
    "next.config.js",
    "tailwind.config.ts",
    "jest.config.ts",
    "playwright.config.ts",
    "scripts/**/*.ts"
  ],

  // ============================================================================
  // üö´ FILES & EXCLUDES
  // ============================================================================
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    ".git",
    ".vscode",
    ".idea",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ],

  // ============================================================================
  // üéØ TYPESCRIPT INCREMENTAL BUILD INFO
  // ============================================================================
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    },
    "transpileOnly": true,
    "files": true
  }
}